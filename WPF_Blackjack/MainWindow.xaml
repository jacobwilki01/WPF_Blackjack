<Window x:Class="WPF_Blackjack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:WPF_Blackjack.View"
        xmlns:local="clr-namespace:WPF_Blackjack" 
        mc:Ignorable="d"
        Title="Blackjack" Height="625" Width="750">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".775*"/>
            <RowDefinition Height=".225*"/>
        </Grid.RowDefinitions>

        <Button Content="Hit!" Command="{Binding AddCardCommand}" Height="20" Width="75"/>
        <view:PlayerHandView DataContext="{Binding testHandModel}" Grid.Row="1" Margin="5,0,0,0"/>
    </Grid>
</Window>
